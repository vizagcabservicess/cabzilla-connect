
# Enable rewrite engine
RewriteEngine On

# Set the base for relative path references
# RewriteBase /

# CRITICAL DIRECT ACCESS - MAXIMUM RELIABILITY DIRECT ACCESS
# Direct access to the unified fare update endpoint - ULTRA-HIGH PRIORITY
RewriteRule ^api/direct-fare-update$ api/admin/direct-fare-update.php [L,QSA]
RewriteRule ^api/direct-fare-update\.php$ api/admin/direct-fare-update.php [L,QSA]
RewriteRule ^api/admin/direct-fare-update$ api/admin/direct-fare-update.php [L,QSA]
RewriteRule ^api/admin/direct-fare-update\.php$ api/admin/direct-fare-update.php [L,QSA]

# ULTRAHIGH PRIORITY - FARE UPDATE ENDPOINTS
# Direct access to outstation-fares-update.php - HIGHEST PRIORITY for all URL patterns
RewriteRule ^api/outstation-fares-update$ api/admin/direct-fare-update.php?tripType=outstation [L,QSA]
RewriteRule ^api/outstation-fares-update\.php$ api/admin/direct-fare-update.php?tripType=outstation [L,QSA]
RewriteRule ^api/admin/outstation-fares-update$ api/admin/direct-fare-update.php?tripType=outstation [L,QSA]
RewriteRule ^api/admin/outstation-fares-update\.php$ api/admin/direct-fare-update.php?tripType=outstation [L,QSA]
RewriteRule ^api/admin/outstation-fares-update/$ api/admin/direct-fare-update.php?tripType=outstation [L,QSA]

# EMERGENCY FIX - Direct outstation endpoints - highest priority
RewriteRule ^api/direct-outstation-fares$ api/admin/direct-fare-update.php?tripType=outstation [L,QSA]
RewriteRule ^api/direct-outstation-fares\.php$ api/admin/direct-fare-update.php?tripType=outstation [L,QSA]
RewriteRule ^api/admin/direct-outstation-fares$ api/admin/direct-fare-update.php?tripType=outstation [L,QSA]
RewriteRule ^api/admin/direct-outstation-fares\.php$ api/admin/direct-fare-update.php?tripType=outstation [L,QSA]

# Direct fare update endpoints related to outstation - high priority
RewriteRule ^api/direct-fare-update$ api/admin/direct-fare-update.php [L,QSA]
RewriteRule ^api/direct-fare-update\.php$ api/admin/direct-fare-update.php [L,QSA]
RewriteRule ^api/admin/direct-fare-update$ api/admin/direct-fare-update.php [L,QSA]
RewriteRule ^api/admin/direct-fare-update\.php$ api/admin/direct-fare-update.php [L,QSA]

# Map all airport fare endpoints
RewriteRule ^api/admin/airport-fares-update$ api/admin/direct-fare-update.php?tripType=airport [QSA,L]
RewriteRule ^api/admin/airport-fares-update\.php$ api/admin/direct-fare-update.php?tripType=airport [QSA,L]
RewriteRule ^api/admin/airport-fares-update/$ api/admin/direct-fare-update.php?tripType=airport [QSA,L]
RewriteRule ^api/direct-airport-fares$ api/admin/direct-fare-update.php?tripType=airport [QSA,L]
RewriteRule ^api/direct-airport-fares\.php$ api/admin/direct-fare-update.php?tripType=airport [QSA,L]
RewriteRule ^api/admin/direct-airport-fares$ api/admin/direct-fare-update.php?tripType=airport [QSA,L]
RewriteRule ^api/admin/direct-airport-fares\.php$ api/admin/direct-fare-update.php?tripType=airport [QSA,L]

# Map all local fare endpoints
RewriteRule ^api/admin/local-fares-update$ api/admin/direct-fare-update.php?tripType=local [QSA,L]
RewriteRule ^api/admin/local-fares-update\.php$ api/admin/direct-fare-update.php?tripType=local [QSA,L]
RewriteRule ^api/admin/local-fares-update/$ api/admin/direct-fare-update.php?tripType=local [QSA,L]
RewriteRule ^api/direct-local-fares$ api/admin/direct-fare-update.php?tripType=local [QSA,L]
RewriteRule ^api/direct-local-fares\.php$ api/admin/direct-fare-update.php?tripType=local [QSA,L]
RewriteRule ^api/admin/direct-local-fares$ api/admin/direct-fare-update.php?tripType=local [QSA,L]
RewriteRule ^api/admin/direct-local-fares\.php$ api/admin/direct-fare-update.php?tripType=local [QSA,L]

# Map generic fares-update to the direct handler
RewriteRule ^api/admin/fares-update$ api/admin/direct-fare-update.php [QSA,L]
RewriteRule ^api/admin/fares-update\.php$ api/admin/direct-fare-update.php [QSA,L]
RewriteRule ^api/admin/fares-update/$ api/admin/direct-fare-update.php [QSA,L]
RewriteRule ^api/fares-update$ api/admin/direct-fare-update.php [QSA,L]
RewriteRule ^api/fares-update\.php$ api/admin/direct-fare-update.php [QSA,L]

# Highest priority routes - database initialization and direct updates
RewriteRule ^api/init-database$ api/admin/init-database.php [L,QSA] 
RewriteRule ^api/init-database\.php$ api/admin/init-database.php [L,QSA]
RewriteRule ^api/admin/init-database$ api/admin/init-database.php [L,QSA]
RewriteRule ^api/admin/init-database\.php$ api/admin/init-database.php [L,QSA]

# // ... keep existing code (debug headers and CORS configuration)

# Add debug header for API paths
<IfModule mod_headers.c>
    <FilesMatch "^api/">
        Header set X-Debug-Path "%{REQUEST_URI}e"
        Header set X-PHP-Path "%{SCRIPT_FILENAME}e"
        Header set X-PHP-Server-Name "%{SERVER_NAME}e"
        Header set X-Real-Path "%{SCRIPT_FILENAME}e"
        Header set X-Mapped-By "Consolidated Fare Update System v1.3"
    </FilesMatch>
</IfModule>

# // ... keep existing code (character set, caching, and CORS settings)

# For OPTIONS preflight requests, immediately return 200 OK
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^api/ - [R=200,L]

