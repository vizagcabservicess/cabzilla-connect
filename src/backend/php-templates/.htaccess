
# Main .htaccess file - Handle all frontend routes correctly
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Enable error logging for debugging
    RewriteLog "/var/log/apache2/rewrite.log"
    RewriteLogLevel 3
    
    # Handle CORS preflight requests
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]
    
    # Add CORS headers for all requests
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "*"
    
    # CRITICAL: API requests need to be handled differently
    # Redirect API requests to the API directory
    RewriteRule ^api(/.*)?$ api$1 [L]
    
    # CRITICAL: Special handling for /admin routes to ensure they route to the SPA
    RewriteRule ^admin(/.*)?$ index.php [L]
    
    # Exclude actual files and directories from routing to index.php 
    # (except for the admin directory which should always route to the SPA)
    RewriteCond %{REQUEST_URI} !^/admin(/.*)?$
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # CRITICAL: Handle all other routes by redirecting to index.php
    RewriteRule ^ index.php [L]
</IfModule>

# Enable CORS for all domains
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header set Access-Control-Allow-Headers "*"
    
    # Cache control
    <FilesMatch "\.(html|php)$">
        Header set Cache-Control "no-store, no-cache, must-revalidate, max-age=0"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
</IfModule>

# PHP settings
<IfModule mod_php7.c>
    php_flag display_errors On
    php_value error_reporting E_ALL
    php_flag log_errors On
    php_value error_log /tmp/php_errors.log
    
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_input_time 300
    php_value max_execution_time 300
</IfModule>
