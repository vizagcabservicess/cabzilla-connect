
# Enable rewrite engine
RewriteEngine On
RewriteBase /api/admin/

# Set default handler to PHP
AddHandler application/x-httpd-php .php

# Enable CORS
Header always set Access-Control-Allow-Origin "*"
Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header always set Access-Control-Allow-Headers "Origin, X-Requested-With, Content-Type, Accept, Authorization, X-Force-Refresh, X-Admin-Mode"

# Handle OPTIONS preflight requests
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Ensure PHP files can be accessed directly
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^vehicles/create$ direct-vehicle-create.php [L,QSA]
RewriteRule ^direct-vehicle-create$ direct-vehicle-create.php [L,QSA]
RewriteRule ^add-vehicle$ add-vehicle-simple.php [L,QSA]
RewriteRule ^vehicle-create$ direct-vehicle-create.php [L,QSA]
RewriteRule ^add-vehicle-simple$ add-vehicle-simple.php [L,QSA]

# Force all responses to be JSON
SetHandler application/x-httpd-php
AddType application/json .php

# Prevent direct access to .php files
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
RewriteRule ^ %1 [R,L]

# Set PHP handler
<FilesMatch "\.php$">
    SetHandler application/x-httpd-php
</FilesMatch>
