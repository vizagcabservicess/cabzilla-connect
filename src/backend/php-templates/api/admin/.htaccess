
# Enable URL rewriting
RewriteEngine On
RewriteBase /api/admin/

# Set PHP handler (critical)
AddHandler application/x-httpd-php .php

# Enable CORS with comprehensive headers
Header always set Access-Control-Allow-Origin "*"
Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header always set Access-Control-Allow-Headers "Origin, X-Requested-With, Content-Type, Accept, Authorization"
Header always set Access-Control-Max-Age "86400"

# Handle OPTIONS preflight requests
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Critical PHP settings
<FilesMatch "\.php$">
    SetHandler application/x-httpd-php
    Header always set Content-Type "application/json"
    Header set Cache-Control "no-cache, no-store, must-revalidate"
</FilesMatch>

# Critical API endpoints
RewriteRule ^generate-invoice/?$ generate-invoice.php [L,QSA]
RewriteRule ^assign-driver/?$ assign-driver.php [L,QSA]
RewriteRule ^update-booking/?$ update-booking.php [L,QSA]
RewriteRule ^cancel-booking/?$ cancel-booking.php [L,QSA]
RewriteRule ^drivers/?$ drivers.php [L,QSA]

# Explicitly allow PHP files in admin directory
<Files ~ "\.php$">
    Order Allow,Deny
    Allow from all
</Files>
