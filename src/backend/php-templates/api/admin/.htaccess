
# Enable rewrite engine and set base path
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /api/admin/
    
    # Allow OPTIONS requests for CORS
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule .* - [R=200,L]
    
    # Set CORS headers for all responses
    <IfModule mod_headers.c>
        Header always set Access-Control-Allow-Origin "*"
        Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
        Header always set Access-Control-Allow-Headers "Origin, X-Requested-With, Content-Type, Accept, Authorization, X-Force-Refresh, X-Admin-Mode"
        Header always set Access-Control-Max-Age "86400"
    </IfModule>

    # Ensure PHP files can be accessed directly
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule .* - [L]

    # Vehicle creation endpoints
    RewriteRule ^vehicles/create$ direct-vehicle-create.php [L]
    RewriteRule ^direct-vehicle-create$ direct-vehicle-create.php [L]
    RewriteRule ^add-vehicle$ add-vehicle-simple.php [L]
    RewriteRule ^vehicle-create$ direct-vehicle-create.php [L]
    RewriteRule ^add-vehicle-simple$ add-vehicle-simple.php [L]
</IfModule>

