
# Enable URL rewriting
RewriteEngine On

# Allow CORS (Cross-Origin Resource Sharing)
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization"
    Header set Access-Control-Max-Age "1728000"
    
    # Add cache prevention headers
    Header set Cache-Control "no-store, no-cache, must-revalidate, max-age=0"
    Header set Pragma "no-cache"
    Header set Expires "0"
</IfModule>

# Handle OPTIONS method for CORS preflight requests
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Set default index for directories
DirectoryIndex index.php

# Process dashboard route with both formats
RewriteRule ^user/dashboard$ user/dashboard.php [QSA,L]
RewriteRule ^user/dashboard/$ user/dashboard.php [QSA,L]

# Critical fix for book.php endpoint - must be reachable directly
RewriteCond %{REQUEST_URI} ^/api/book(\.php)?$ [OR]
RewriteCond %{REQUEST_URI} ^/api/booking(\.php)?$
RewriteRule .* - [L]

# Process booking URLs - multiple formats for compatibility
RewriteRule ^booking/([0-9]+)/edit/?$ booking/edit.php?id=$1 [QSA,L]
RewriteRule ^book/edit/([0-9]+)/?$ booking/edit.php?id=$1 [QSA,L]
RewriteRule ^booking/edit/([0-9]+)/?$ booking/edit.php?id=$1 [QSA,L]

# Process booking receipt URLs
RewriteRule ^receipt/([0-9]+)/?$ receipt.php?id=$1 [QSA,L]
RewriteRule ^booking/([0-9]+)/?$ receipt.php?id=$1 [QSA,L]
RewriteRule ^booking/([0-9]+)/receipt/?$ receipt.php?id=$1 [QSA,L]

# Process booking cancellation URLs
RewriteRule ^booking/cancel/?$ booking/cancel.php [QSA,L]
RewriteRule ^book/cancel/([0-9]+)/?$ booking/cancel.php?id=$1 [QSA,L]
RewriteRule ^booking/([0-9]+)/cancel/?$ booking/cancel.php?id=$1 [QSA,L]

# Critical fix - allow direct access to PHP files
RewriteCond %{REQUEST_URI} \.(php)$
RewriteRule .* - [L]

# Prevent viewing of .htaccess and other hidden files
<FilesMatch "^\.ht">
    Order allow,deny
    Deny from all
</FilesMatch>

# Disable directory listing
Options -Indexes

# Set PHP error reporting (development)
php_flag display_errors On
php_value error_reporting E_ALL
