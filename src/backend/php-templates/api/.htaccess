
# Enable rewrite engine
RewriteEngine On

# CRITICAL DIRECT ACCESS - MAXIMUM RELIABILITY - TOP PRIORITY
# Direct to one universal fare update endpoint to minimize failures
RewriteRule ^direct-fare-update$ admin/direct-fare-update.php [L,QSA]
RewriteRule ^direct-fare-update\.php$ admin/direct-fare-update.php [L,QSA]
RewriteRule ^admin/direct-fare-update$ admin/direct-fare-update.php [L,QSA]
RewriteRule ^admin/direct-fare-update\.php$ admin/direct-fare-update.php [L,QSA]

# All outstation fare updates to single endpoint
RewriteRule ^outstation-fares-update$ admin/direct-fare-update.php?tripType=outstation [L,QSA]
RewriteRule ^outstation-fares-update\.php$ admin/direct-fare-update.php?tripType=outstation [L,QSA]
RewriteRule ^admin/outstation-fares-update$ admin/direct-fare-update.php?tripType=outstation [L,QSA]
RewriteRule ^admin/outstation-fares-update\.php$ admin/direct-fare-update.php?tripType=outstation [L,QSA]
RewriteRule ^direct-outstation-fares$ admin/direct-fare-update.php?tripType=outstation [L,QSA]
RewriteRule ^direct-outstation-fares\.php$ admin/direct-fare-update.php?tripType=outstation [L,QSA]
RewriteRule ^admin/direct-outstation-fares$ admin/direct-fare-update.php?tripType=outstation [L,QSA]
RewriteRule ^admin/direct-outstation-fares\.php$ admin/direct-fare-update.php?tripType=outstation [L,QSA]

# Map all airport fare endpoints
RewriteRule ^admin/airport-fares-update$ admin/direct-fare-update.php?tripType=airport [QSA,L]
RewriteRule ^admin/airport-fares-update\.php$ admin/direct-fare-update.php?tripType=airport [QSA,L]
RewriteRule ^direct-airport-fares$ admin/direct-fare-update.php?tripType=airport [QSA,L]
RewriteRule ^direct-airport-fares\.php$ admin/direct-fare-update.php?tripType=airport [QSA,L]
RewriteRule ^admin/direct-airport-fares$ admin/direct-fare-update.php?tripType=airport [QSA,L]
RewriteRule ^admin/direct-airport-fares\.php$ admin/direct-fare-update.php?tripType=airport [QSA,L]

# Map all local fare endpoints
RewriteRule ^admin/local-fares-update$ admin/direct-fare-update.php?tripType=local [QSA,L]
RewriteRule ^admin/local-fares-update\.php$ admin/direct-fare-update.php?tripType=local [QSA,L]
RewriteRule ^direct-local-fares$ admin/direct-fare-update.php?tripType=local [QSA,L]
RewriteRule ^direct-local-fares\.php$ admin/direct-fare-update.php?tripType=local [QSA,L]
RewriteRule ^admin/direct-local-fares$ admin/direct-fare-update.php?tripType=local [QSA,L]
RewriteRule ^admin/direct-local-fares\.php$ admin/direct-fare-update.php?tripType=local [QSA,L]

# Map generic fares-update to the direct handler
RewriteRule ^admin/fares-update$ admin/direct-fare-update.php [QSA,L]
RewriteRule ^admin/fares-update\.php$ admin/direct-fare-update.php [QSA,L]
RewriteRule ^fares-update$ admin/direct-fare-update.php [QSA,L]
RewriteRule ^fares-update\.php$ admin/direct-fare-update.php [QSA,L]

# DATABASE SETUP ENDPOINT - HIGH PRIORITY
# Route to initialize the database tables
RewriteRule ^init-database$ admin/init-database.php [L,QSA]
RewriteRule ^init-database\.php$ admin/init-database.php [L,QSA]
RewriteRule ^admin/init-database$ admin/init-database.php [L,QSA]
RewriteRule ^admin/init-database\.php$ admin/init-database.php [L,QSA]

# Set access headers for all responses with high priority
<IfModule mod_headers.c>
    # Set CORS headers unconditionally for all responses - high priority
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With, Accept, X-Force-Refresh, X-Custom-Timestamp, X-API-Version, X-Client-Version, X-Authorization-Override, X-Debug-Mode, X-Cache-Control, X-Request-ID, X-Request-Source"
    Header always set Access-Control-Max-Age "7200"
    
    # Set CORS headers specifically for OPTIONS preflight requests - highest priority
    <If "%{REQUEST_METHOD} == 'OPTIONS'">
        Header always set Access-Control-Allow-Origin "*"
        Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
        Header always set Access-Control-Allow-Headers "*"
        Header always set Access-Control-Max-Age "7200"
        Header always set Content-Type "text/plain"
        Header always set Content-Length "0"
        Header always set Status "200 OK"
    </If>
    
    # Enhanced caching headers for stability - prevent browsers from causing loops
    Header always set Cache-Control "private, must-revalidate, max-age=60"
    Header always set Pragma "no-cache"
    Header always set Expires "60"
    
    # Add debugging headers
    Header always set X-API-Debug "Processed by new unified direct-fare-update handler"
    Header always set X-API-Version "1.1.0"
    Header always set X-Server-Time "%{TIME}e"
    Header always set X-Request-ID "%{UNIQUE_ID}e"
    Header always set X-Response-Timestamp "%{TIME}e"
    Header always set X-Server-Name "%{SERVER_NAME}e"
    Header always set X-Real-Path "%{SCRIPT_FILENAME}e"
</IfModule>

# Handle OPTIONS requests for CORS preflight - immediately return 200
# This is crucial for preflight requests to succeed
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule .* - [R=200,L]

# // ... keep existing code (direct API access endpoints)

# Parse API routes to PHP files - DIRECT ACCESS FIRST (higher priority)
# Ultra-simple direct access endpoints for bypassing all routing complexity
RewriteRule ^direct-booking-data$ user/direct-booking-data.php [L,QSA]
RewriteRule ^direct-user-data$ admin/direct-user-data.php [L,QSA]
RewriteRule ^direct-vehicle-pricing$ admin/direct-vehicle-pricing.php [L,QSA]
RewriteRule ^direct-base-pricing$ admin/direct-outstation-fares.php?trip_type=base [L,QSA]

# // ... keep existing code (debug headers, etc.)

# Prevent directory listing
Options -Indexes
