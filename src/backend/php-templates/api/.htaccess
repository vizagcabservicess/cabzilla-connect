
# Enable rewrite engine
RewriteEngine On

# Parse API routes to PHP files
RewriteRule ^signup$ signup.php [L]
RewriteRule ^login$ login.php [L]
RewriteRule ^user/dashboard$ user/dashboard.php [L]
RewriteRule ^user/booking/([0-9]+)$ user/booking.php?id=$1 [QSA,L]
RewriteRule ^booking/create$ book.php [L]
RewriteRule ^book$ book.php [L]
RewriteRule ^update-booking/([0-9]+)$ update-booking.php?id=$1 [QSA,L]
RewriteRule ^admin/bookings$ admin/bookings.php [L]
RewriteRule ^admin/metrics$ admin/metrics.php [QSA,L]
RewriteRule ^admin/fares/tours$ admin/fares/tours.php [L]
RewriteRule ^admin/fares/vehicles$ admin/fares/vehicles.php [L]
RewriteRule ^admin/fares/update$ admin/fares-update.php [L]
RewriteRule ^admin/km-price/update$ admin/km-price-update.php [L]
RewriteRule ^receipt/([0-9]+)$ receipt.php?id=$1 [QSA,L]

# Debug header to help troubleshoot routing
Header set X-Requested-Path "%{REQUEST_URI}e"
Header set X-Query-String "%{QUERY_STRING}e"

# Disable caching for API endpoints
<IfModule mod_headers.c>
    Header always set Cache-Control "no-store, no-cache, must-revalidate, max-age=0"
    Header always set Pragma "no-cache"
    Header always set Expires "0"
    Header always append X-Frame-Options "DENY"
    Header always append X-Content-Type-Options "nosniff"
    Header always append X-XSS-Protection "1; mode=block"
</IfModule>

# Set content type
<FilesMatch "\.(php)$">
    Header set Content-Type "application/json"
</FilesMatch>

# Enable CORS - expanded for better browser compatibility
<IfModule mod_headers.c>
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With, Cache-Control"
    Header always set Access-Control-Max-Age "3600"
    Header always set Access-Control-Allow-Credentials "true"
    
    # Prevent browsers from incorrectly detecting non-scripts as scripts
    Header always set X-Content-Type-Options "nosniff"
</IfModule>

# Handle OPTIONS method for CORS preflight
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule .* - [R=200,L]

# Prevent directory listing
Options -Indexes

# Deny access to hidden files and directories
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>
