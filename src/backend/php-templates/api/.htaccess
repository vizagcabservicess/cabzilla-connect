
# Enable rewrite engine
RewriteEngine On

# Set access headers for all responses with high priority
<IfModule mod_headers.c>
    # Set CORS headers unconditionally for all responses - high priority
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With, Accept, X-Force-Refresh, X-Custom-Timestamp, X-API-Version, X-Client-Version, X-Authorization-Override, X-Debug-Mode, X-Cache-Control, X-Request-ID, X-Request-Source"
    Header always set Access-Control-Max-Age "7200"
    
    # Set CORS headers specifically for OPTIONS preflight requests - highest priority
    <If "%{REQUEST_METHOD} == 'OPTIONS'">
        Header always set Access-Control-Allow-Origin "*"
        Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
        Header always set Access-Control-Allow-Headers "*"
        Header always set Access-Control-Max-Age "7200"
        Header always set Content-Type "text/plain"
        Header always set Content-Length "0"
        Header always set Status "200 OK"
    </If>
    
    # Disable caching for all API responses
    Header always set Cache-Control "no-store, no-cache, must-revalidate, max-age=0"
    Header always set Pragma "no-cache"
    Header always set Expires "0"
    
    # Add debugging headers
    Header always set X-API-Debug "Processed by main API htaccess - v1.0.58"
    Header always set X-API-Version "1.0.58"
    Header always set X-Server-Time "%{TIME}e"
    Header always set X-Request-ID "%{UNIQUE_ID}e"
    Header always set X-Response-Timestamp "%{TIME}e"
</IfModule>

# Handle OPTIONS requests for CORS preflight - immediately return 200
# This is crucial for preflight requests to succeed
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule .* - [R=200,L]

# Throttle requests to prevent API overload
# We'll use a simple rate limiting based on IP address
# This requires mod_rewrite and access to server variables
<IfModule mod_rewrite.c>
    # Set a flag if this IP has made too many requests
    RewriteMap throttle prg:/path/to/throttle.php
    
    # Check if the IP is making too many requests in a short time
    # If it is, return a 429 status code
    RewriteCond %{ENV:THROTTLED} =1
    RewriteRule .* - [R=429,L]
</IfModule>

# ULTRA HIGH PRIORITY - Direct access to update endpoints
# Skip all routing complexity for these critical endpoints
RewriteRule ^direct-outstation-fares.php$ admin/direct-outstation-fares.php [L,QSA]
RewriteRule ^direct-airport-fares.php$ admin/direct-airport-fares.php [L,QSA]
RewriteRule ^direct-local-fares.php$ admin/direct-outstation-fares.php?trip_type=local [L,QSA]

# CRITICAL FARE UPDATE FIX - Route all fare updates to direct endpoints
# This is essential to ensure fare updates work correctly
RewriteRule ^admin/([^/]+)-fares-update$ admin/direct-outstation-fares.php?trip_type=$1 [QSA,L]
RewriteRule ^admin/airport-fares-update$ admin/direct-airport-fares.php [QSA,L]
RewriteRule ^admin/outstation-fares-update$ admin/direct-outstation-fares.php [QSA,L]
RewriteRule ^admin/local-fares-update$ admin/direct-outstation-fares.php?trip_type=local [QSA,L]

# Parse API routes to PHP files - DIRECT ACCESS FIRST (higher priority)
# Ultra-simple direct access endpoints for bypassing all routing complexity
RewriteRule ^direct-booking-data$ user/direct-booking-data.php [L,QSA]
RewriteRule ^direct-user-data$ admin/direct-user-data.php [L,QSA]
RewriteRule ^direct-vehicle-pricing$ admin/direct-vehicle-pricing.php [L,QSA]
RewriteRule ^direct-outstation-fares$ admin/direct-outstation-fares.php [L,QSA]
RewriteRule ^direct-local-fares$ admin/direct-outstation-fares.php?trip_type=local [L,QSA]
RewriteRule ^direct-airport-fares$ admin/direct-airport-fares.php [L,QSA]
RewriteRule ^direct-base-pricing$ admin/direct-outstation-fares.php?trip_type=base [L,QSA]
RewriteRule ^direct-fare-update$ admin/direct-outstation-fares.php [L,QSA]

# Regular API routes
RewriteRule ^signup$ signup.php [L]
RewriteRule ^login$ login.php [L]
RewriteRule ^user/dashboard$ user/dashboard.php [L,QSA]
RewriteRule ^user/booking/([0-9]+)$ user/booking.php?id=$1 [QSA,L]
RewriteRule ^user/bookings$ user/bookings.php [L,QSA]
RewriteRule ^book$ book.php [L,QSA]
RewriteRule ^update-booking$ update-booking.php [QSA,L]
RewriteRule ^update-booking/([0-9]+)$ update-booking.php?id=$1 [QSA,L]
RewriteRule ^admin/booking$ admin/booking.php [QSA,L]
RewriteRule ^admin/booking/([0-9]+)$ admin/booking.php?id=$1 [QSA,L]
RewriteRule ^admin/metrics$ admin/metrics.php [QSA,L]
RewriteRule ^admin/users$ admin/users.php [QSA,L]
RewriteRule ^fares/tours$ fares/tours.php [L,QSA]
RewriteRule ^fares/vehicles$ fares/vehicles.php [L,QSA]
RewriteRule ^fares/vehicles-data$ fares/vehicles-data.php [L,QSA]
RewriteRule ^admin/fares/update$ admin/fares-update.php [QSA,L]
RewriteRule ^admin/km-price/update$ admin/km-price-update.php [L,QSA]
RewriteRule ^admin/vehicle-pricing$ admin/vehicle-pricing.php [L,QSA]
RewriteRule ^admin/vehicles-update$ admin/vehicles-update.php [QSA,L]
RewriteRule ^admin/vehicles$ admin/vehicles-update.php [QSA,L]
RewriteRule ^admin/vehicles/add$ admin/vehicles-update.php [QSA,L]
RewriteRule ^admin/drivers$ admin/drivers.php [QSA,L]
RewriteRule ^admin/drivers/([0-9]+)$ admin/drivers.php?id=$1 [QSA,L]
RewriteRule ^receipt/([0-9]+)$ receipt.php?id=$1 [QSA,L]
RewriteRule ^vehicles-data$ fares/vehicles-data.php [L,QSA]

# Access the "raw" PHP endpoints for direct testing and debugging
RewriteRule ^raw-vehicle-pricing$ admin/vehicle-pricing.php?raw=1 [QSA,L]
RewriteRule ^raw-fare-update$ admin/fares-update.php?raw=1 [QSA,L]

# Debug headers to help troubleshoot routing
Header set X-Requested-Path "%{REQUEST_URI}e"
Header set X-Query-String "%{QUERY_STRING}e"
Header set X-Script-Filename "%{SCRIPT_FILENAME}e"

# Prevent directory listing
Options -Indexes
