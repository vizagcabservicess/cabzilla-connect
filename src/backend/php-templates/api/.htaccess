# Enable URL rewriting with aggressive CORS configuration
RewriteEngine On
RewriteBase /api/

# CRITICAL: Respond with 200 OK for OPTIONS preflight requests (highest priority)
<IfModule mod_headers.c>
    <If "%{REQUEST_METHOD} == 'OPTIONS'">
        Header always set Status "200 OK"
        Header always set Access-Control-Allow-Origin "*" 
        Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
        Header always set Access-Control-Allow-Headers "Origin, X-Requested-With, Content-Type, Accept, Authorization, X-Force-Refresh, X-Admin-Mode, X-Debug, *"
        Header always set Access-Control-Max-Age "86400"
        Header always set Content-Type "text/plain"
        Header always set Content-Length "0"
    </If>
</IfModule>

# Set access headers for all responses
<IfModule mod_headers.c>
    # Set CORS headers unconditionally for all responses
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "*"
    Header always set Access-Control-Max-Age "86400"
    Header always set Access-Control-Expose-Headers "*"
</IfModule>

# Handle OPTIONS requests - immediately return 200
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule .* - [R=200,L]

# CRITICAL: Set PHP handler for all PHP files
AddHandler application/x-httpd-php .php

# CRITICAL: Explicitly map admin booking endpoints - HIGHEST PRIORITY
RewriteRule ^admin/booking\.php$ admin/booking.php [L,QSA]
RewriteRule ^admin/booking$ admin/booking.php [L,QSA]
RewriteRule ^admin/booking/([0-9]+)$ admin/booking.php?id=$1 [L,QSA]
RewriteRule ^admin/bookings$ admin/booking.php [L,QSA]
RewriteRule ^admin/bookings/([0-9]+)$ admin/booking.php?id=$1 [L,QSA]
RewriteRule ^admin/bookings\.php$ admin/booking.php [L,QSA]

# CRITICAL: First priority - Login/Signup direct access (with and without .php extension)
# Base endpoint variations (with and without file extension)
RewriteRule ^login$ login.php [L,QSA]
RewriteRule ^login\.php$ login.php [L,QSA]
RewriteRule ^signup$ signup.php [L,QSA]
RewriteRule ^signup\.php$ signup.php [L,QSA]
RewriteRule ^register$ signup.php [L,QSA]
RewriteRule ^register\.php$ signup.php [L,QSA]

# ROOT level auth endpoint variations (ensure these also work)
RewriteRule ^/login$ login.php [L,QSA]
RewriteRule ^/login\.php$ login.php [L,QSA]
RewriteRule ^/signup$ signup.php [L,QSA]
RewriteRule ^/signup\.php$ signup.php [L,QSA]
RewriteRule ^/register$ signup.php [L,QSA]
RewriteRule ^/register\.php$ signup.php [L,QSA]

# API prefixed auth endpoint variations
RewriteRule ^api/login$ login.php [L,QSA]
RewriteRule ^api/login\.php$ login.php [L,QSA]
RewriteRule ^api/signup$ signup.php [L,QSA]
RewriteRule ^api/signup\.php$ signup.php [L,QSA]
RewriteRule ^api/register$ signup.php [L,QSA]
RewriteRule ^api/register\.php$ signup.php [L,QSA]

# With trailing slashes
RewriteRule ^login/$ login.php [L,QSA]
RewriteRule ^signup/$ signup.php [L,QSA]
RewriteRule ^register/$ signup.php [L,QSA]

# Auth subdirectory variations
RewriteRule ^auth/login$ login.php [L,QSA]
RewriteRule ^auth/login\.php$ login.php [L,QSA]
RewriteRule ^auth/signup$ signup.php [L,QSA]
RewriteRule ^auth/signup\.php$ signup.php [L,QSA]
RewriteRule ^auth/register$ signup.php [L,QSA]
RewriteRule ^auth/register\.php$ signup.php [L,QSA]

# Auth subdirectory with trailing slashes
RewriteRule ^auth/login/$ login.php [L,QSA]
RewriteRule ^auth/signup/$ signup.php [L,QSA]
RewriteRule ^auth/register/$ signup.php [L,QSA]

# CRITICAL VEHICLE ENDPOINTS - HIGHEST PRIORITY
