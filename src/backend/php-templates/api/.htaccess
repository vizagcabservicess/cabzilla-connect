# Allow access to all PHP files directly
<Files "*.php">
    Require all granted
</Files>

# Critical: Prevent HTML error responses for PHP files
<FilesMatch "\.php$">
    # Force PHP processing even if system wants to serve as plain text
    SetHandler application/x-httpd-php
    # Set JSON content type for API responses
    Header always set Content-Type "application/json" env=REDIRECT_STATUS=200
</FilesMatch>

# NEW: Direct file path for login and signup
# Make login.php and signup.php accessible even when called directly without rewrite
<Files "login.php">
    Require all granted
    SetHandler application/x-httpd-php
    DirectoryIndex login.php
</Files>

<Files "signup.php">
    Require all granted
    SetHandler application/x-httpd-php
    DirectoryIndex signup.php
</Files>

